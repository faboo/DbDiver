<UserControl x:Class="DbDiver.EditData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						 xmlns:src="clr-namespace:DbDiver"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
						 Name="Control">
	<UserControl.CommandBindings>
		<CommandBinding Command="Open" Executed="ExecuteOpenTable" CanExecute="CanOpenTable" />
	</UserControl.CommandBindings>

	<DockPanel DataContext="{Binding ElementName=Control}">
		<StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
			<Label Content="Table:" Target="TablesBox" Margin="0,0,3,0" />
			<ComboBox Name="TablesBox" IsEditable="true" ItemsSource="{Binding Tables}" Width="80" />
			
			<Label Content="... where:" Target="WhereBox" Margin="7,0,3,0" />
			<TextBox Name="WhereBox" Width="150" />
		</StackPanel>
		<Button Content="Run" Command="Open" Grid.Row="2" Grid.Column="1" Margin="0 5 0 5" Width="72" DockPanel.Dock="Top" HorizontalAlignment="Left" />

		<DataGrid ItemsSource="{Binding Rows}"
							IsReadOnly="False"
							VerticalGridLinesBrush="LightGray"
							HorizontalGridLinesBrush="Aquamarine"
							CellEditEnding="OnCellEditEnding">
			<DataGrid.RowStyle>
				<Style TargetType="DataGridRow">
					<Setter Property="ContextMenu">
						<Setter.Value>
							<ContextMenu>
								<MenuItem Header="Delete" Command="Delete" />
							</ContextMenu>
						</Setter.Value>
					</Setter>
				</Style>
			</DataGrid.RowStyle>
		</DataGrid>
	</DockPanel>
</UserControl>
